
@model HomePageModel;
<div role="main" class="main">

    <!-- Google Maps - Go to the bottom of the page to change settings and map location. -->
    @*<div id="googlemaps" class="google-map mt-0" style="height: 500px;"></div>*@

    <div class="container">

        <div class="row py-4">
            <div class="col-lg-6">

                <h2 class="font-weight-bold text-8 mt-2 mb-0">@VipAssistProject.Resources.ResWebsite.lbContact_Us</h2>
                <p class="mb-4">@VipAssistProject.Resources.ResWebsite.lbFeel_free_to_ask_for_details__don_t_save_any_questions_</p>

                <form class="contact-form" asp-controller="Home" asp-action="RecieveMessage" id="RecieveMessage" method="post" role="form" >
                    <div class="contact-form-success alert alert-success d-none mt-4">
                        <strong>Success!</strong> @VipAssistProject.Resources.ResWebsite.lbYour_message_has_been_sent_to_us_
                    </div>

                    <div class="contact-form-error alert alert-danger d-none mt-4">
                        <strong>Error!</strong> There was an error sending your message.
                        <span class="mail-error-message text-1 d-block"></span>
                    </div>

                    <div class="row">
                        <div class="form-group col-lg-6">
                            
                            <label class="form-label mb-1 text-2"><p class="m-0">@VipAssistProject.Resources.ResWebsite.lbFull_Name</p></label>
                            <input type="text" value="" data-msg-required=@VipAssistProject.Resources.ResWebsite.lbPlease_enter_your_name_ maxlength="100" class="form-control text-3 h-auto py-2" asp-for="@Model.Message.DescriptionAr" required>
                        </div>
                        <div class="form-group col-lg-6">
                            <label class="form-label mb-1 text-2"><p class="m-0">@VipAssistProject.Resources.ResWebsite.lbEmail_address</p></label>

                            <input type="email" value="" data-msg-required=@VipAssistProject.Resources.ResWebsite.lbPlease_enter_your_email_address_ data-msg-email="Please enter a valid email address." maxlength="100" class="form-control text-3 h-auto py-2" asp-for="@Model.Message.DescriptionEn" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col">
                            <label class="form-label mb-1 text-2"><p class="m-0">@VipAssistProject.Resources.ResWebsite.lbSubject</p></label>
                       
                            <input type="text" value="" data-msg-required=@VipAssistProject.Resources.ResWebsite.lbSubject maxlength="100" class="form-control text-3 h-auto py-2" asp-for="@Model.Message.DescriptionFr" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col">
                           
                            <label class="form-label mb-1 text-2"><p class="m-0">@VipAssistProject.Resources.ResWebsite.lbMessage</p></label>
                            <textarea maxlength="5000" data-msg-required=@VipAssistProject.Resources.ResWebsite.lbMessage rows="8" class="form-control text-3 h-auto py-2" asp-for="@Model.Message.ShortDescriptionAr" required></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col">
                            <input type="submit" value=@VipAssistProject.Resources.ResWebsite.lbPlease_enter_your_message_ class="btn btn-primary btn-modern" data-loading-text="Loading...">
                        </div>
                    </div>
                </form>

            </div>
            <div class="col-lg-6">

                <div class="appear-animation" data-appear-animation="fadeIn" data-appear-animation-delay="800">
                    <h4 class="mt-2 mb-1">@VipAssistProject.Resources.ResWebsite.lbOur <strong>@VipAssistProject.Resources.ResWebsite.lbOffice</strong></h4>
                    <ul class="list list-icons list-icons-style-2 mt-2">

                        <li class="mb-1"><i class="fas fa-map-marker-alt top-6"></i><p class="m-0">1234 Street Name, City Name, United States</p></li>
                        <li class="mb-1"><i class="fas fa-phone top-6"></i><p class="m-0">(123) 456-789</p></li>
                        <li class="mb-1"><i class="fas fa-envelope top-6"></i><p class="m-0"><a href="mailto:mail@example.com"> mail@example.com</a></p></li>
                        
                    </ul>
                </div>

                <div class="appear-animation" data-appear-animation="fadeIn" data-appear-animation-delay="950">
                    <h4 class="pt-5">@VipAssistProject.Resources.ResWebsite.lbBusiness <strong>@VipAssistProject.Resources.ResWebsite.lbHours</strong></h4>
                    <ul class="list list-icons list-dark mt-2">
                      
                        <li><i class="far fa-clock top-6"></i>  <p class="m-0">Monday - Friday - 9am to 5pm</p></li>
                        <li><i class="far fa-clock top-6"></i>  <p class="m-0">Saturday - 9am to 2pm</p></li>
                        <li><i class="far fa-clock top-6"></i>   <p class="m-0">Sunday - Closed</p></li>
                    </ul>
                </div>

                <h4 class="pt-5">@VipAssistProject.Resources.ResWebsite.lbGet_In<strong>@VipAssistProject.Resources.ResWebsite.lbTouch</strong></h4>
                <p class="lead mb-0 text-4" style="font-family: Poppins, sans-serif; line-height: 1.6; animation-delay: 200ms;">@VipAssistProject.Resources.ResWebsite.lbOur_teamis</p>

            </div>

        </div>

    </div>

</div>

<section class="call-to-action call-to-action-default with-button-arrow content-align-center call-to-action-in-footer">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-lg-9">
                <div class="call-to-action-content">
                       
                    <h2 class="font-weight-normal text-6 mb-0">AccoladeConcierge is <strong class="font-weight-extra-bold">@VipAssistProject.Resources.ResWebsite.lbAglobalairport</strong>  @VipAssistProject.Resources.ResWebsite.lbBringing <strong class="font-weight-extra-bold">@VipAssistProject.Resources.ResWebsite.lbExclusiveand</strong> @VipAssistProject.Resources.ResWebsite.lbluxurioustravel_</h2>
                    <p class="mb-0">@VipAssistProject.Resources.ResWebsite.lbTHE</p>
                </div>
            </div>
            <div class="col-md-3 col-lg-3">
                <div class="call-to-action-btn">
                    <a asp-controller="Home" asp-action="Index" target="_blank" class="btn btn-dark btn-lg text-3 font-weight-semibold px-4 py-3">@VipAssistProject.Resources.ResWebsite.lbGetStartedNow</a><span class="arrow hlb d-none d-md-block" data-appear-animation="rotateInUpLeft" style="top: -40px; left: 70%;"></span>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts
{

    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY"></script>
    <script>

        /*
        Map Settings

            Find the Latitude and Longitude of your address:
                - https://www.latlong.net/
                - http://www.findlatitudeandlongitude.com/find-address-from-latitude-and-longitude/

        */
        function initializeGoogleMaps() {
            // Map Markers
            var mapMarkers = [{
                address: "New York, NY 10017",
                html: "<strong>New York Office</strong><br>New York, NY 10017",
                icon: {
                    image: "img/pin.png",
                    iconsize: [26, 46],
                    iconanchor: [12, 46]
                },
                popup: true
            }];

            // Map Initial Location
            var initLatitude = 40.75198;
            var initLongitude = -73.96978;

            // Map Extended Settings
            var mapSettings = {
                controls: {
                    draggable: (($.browser.mobile) ? false : true),
                    panControl: true,
                    zoomControl: true,
                    mapTypeControl: true,
                    scaleControl: true,
                    streetViewControl: true,
                    overviewMapControl: true
                },
                scrollwheel: false,
                markers: mapMarkers,
                latitude: initLatitude,
                longitude: initLongitude,
                zoom: 11
            };

            var map = $('#googlemaps').gMap(mapSettings);
        }

        // Initialize Google Maps when element enter on browser view
        theme.fn.intObs('.google-map', 'initializeGoogleMaps()', {});

        // Map text-center At
        var mapCenterAt = function (options, e) {
            e.preventDefault();
            $('#googlemaps').gMap("centerAt", options);
        }

    </script>


}



